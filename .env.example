# Environment Variables Template
# Copy this file to .env and update with your actual values

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# IMPORTANT: Generate a secure random key for production!
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================================================
# DATABASE
# ============================================================================
# For Docker/Salad.com deployment, keep this as is
DATABASE_URL=sqlite:///./ai_education.db

# For PostgreSQL (optional, more robust for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_education

# ============================================================================
# FILE STORAGE PATHS
# ============================================================================
UPLOAD_DIR=./uploads
FACE_IMAGES_DIR=./uploads/faces
MATERIALS_DIR=./uploads/materials
PRESENTATIONS_DIR=./uploads/presentations
AUDIO_DIR=./uploads/audio
VECTOR_STORES_DIR=./vector_stores

# ============================================================================
# CORS SETTINGS
# ============================================================================
# For development: Allow all origins
# CORS_ORIGINS=["*"]

# For production: Specify your frontend URL(s)
# CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
CORS_ORIGINS=["*"]

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================
# Speech-to-Text model for Uzbek
STT_MODEL=lucio/xls-r-uzbek-cv8

# Embedding model for RAG/Q&A (multilingual, supports Uzbek)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Text-to-Speech voice (Uzbek)
TTS_VOICE=uz-UZ-SardorNeural

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
MAX_UPLOAD_SIZE=52428800
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_DOCUMENTS=3

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=AI Education Backend
APP_VERSION=1.0.0
DEBUG=False

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# Hugging Face (required for some private models)
# HUGGINGFACE_TOKEN=your-huggingface-token

# OpenAI (if you want to use GPT models instead of local LLMs)
# OPENAI_API_KEY=your-openai-api-key

# ============================================================================
# DEPLOYMENT SETTINGS (For Salad.com or other cloud platforms)
# ============================================================================
# Port for the application (Salad.com will map this automatically)
PORT=8000

# Host binding (0.0.0.0 for Docker/cloud deployment)
HOST=0.0.0.0

# Number of workers (use 1 for GPU workloads to avoid conflicts)
WORKERS=1
